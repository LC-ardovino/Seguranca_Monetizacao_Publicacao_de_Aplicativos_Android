<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="@color/abobora_claro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >


            <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Main_GravarAlterarRemoverDados"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="1dp"
        android:foreground="?attr/selectableItemBackground"

        app:cardUseCompatPadding="true">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Adicionando, Alterando e Deletando dados na nuvem"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="@color/abobora_escuro"
                    android:textColorHint="@color/abobora_escuro"
                    />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Main_Categorias"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="1dp"
        android:foreground="?attr/selectableItemBackground"

        app:cardUseCompatPadding="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Categorias"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/abobora_escuro"
            android:textColorHint="@color/abobora_escuro"/>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Main_Deslogar"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="1dp"
        android:foreground="?attr/selectableItemBackground"

        app:cardUseCompatPadding="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Deslogar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/abobora_escuro"
            android:textColorHint="@color/abobora_escuro"/>


    </androidx.cardview.widget.CardView>




        </LinearLayout>


    </ScrollView>


</LinearLayout>