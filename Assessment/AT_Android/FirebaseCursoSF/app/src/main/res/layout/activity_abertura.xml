<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".AberturaActivity"
    android:background="@color/abobora_claro">

    <androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login *"
        android:textColor="@color/abobora_escuro"
        android:textColorHint="@color/abobora_escuro"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_Login_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:textColor="@color/abobora_escuro"
        android:textColorHint="@color/abobora_escuro"/>


    <TextView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Senha *"
        android:textColor="@color/abobora_escuro"
        android:textColorHint="@color/abobora_escuro"/>


    <EditText
        android:id="@+id/editText_Login_Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira sua senha"
        android:inputType="numberPassword"
        android:textSize="20sp"
        android:textColor="@color/abobora_escuro"
        android:textColorHint="@color/abobora_escuro"/>


    <Button
        android:id="@+id/button_Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ok"
        android:textAllCaps="false"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="388dp"
        android:layout_height="30dp"
        android:text="Login: emailteste@gmail.com" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha: 123456" />


</LinearLayout>